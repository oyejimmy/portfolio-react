{
  "version": "0.3",
  "build": {
    "image": "ghcr.io/railwayapp/railpack-frontend:v0.3.0",
    "steps": [
      {
        "type": "copy",
        "source": ".",
        "destination": "/app",
        "ignore": ["node_modules", "dist", ".git", ".railignore", ".dockerignore"]
      },
      {
        "type": "run",
        "command": "npm ci",
        "working_dir": "/app"
      },
      {
        "type": "run",
        "command": "npm run build",
        "working_dir": "/app"
      }
    ]
  },
  "start": {
    "command": "npm run start",
    "working_dir": "/app",
    "env": {
      "NODE_ENV": "production",
      "PORT": "5000"
    }
  },
  "secrets": [
    "RAILWAY_SECRET_1",
    "RAILWAY_SECRET_2"
  ]
}
